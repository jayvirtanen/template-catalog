pipeline {
      agent{
        label "${pod_template}"
        }
    stages {
        stage('Checkout') {
            steps {
                git credentialsId: "${github_creds}" , url: "${github_repo}" 
            }
        }
        stage('Build') { 
            environment{
                  GOALS = "GOALS_${env_var}"
                  SHELL = "/bin/bash"
            }
            steps {
            container(name: 'maven'){
                sh 'printenv'
                sh 'echo $0'
                sleep 600
                sh "mvn ${maven_goals}" 
            }
            }
        }
    }
}
